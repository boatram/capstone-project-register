@model CapstoneProjectRegister.Web.Pages.TopicOfLecturerManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TopicOfLecturer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            
            <div class="form-group">
                <label asp-for="TopicView.Name"></label>
                <input class="form-control" asp-for="TopicView.Name" />
                <span asp-validation-for="TopicView.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicView.Description"></label>
                <input class="form-control" asp-for="TopicView.Description" />
                <span asp-validation-for="TopicView.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicView.SemesterCode" class="control-label"></label>
                <select asp-for="TopicView.SemesterCode" class="form-control" asp-items="ViewBag.SemesterCode"></select>
            </div>
            <div class="form-group">
                <label asp-for="TopicView.SuperLecturerEmail" class="control-label"></label>
                <select asp-for="TopicView.SuperLecturerEmail" class="form-control" asp-items="ViewBag.SuperLecturerEmail"></select>
            </div>
            <div class="form-group">
                <label asp-for="TopicView.LecturerName" class="control-label"></label>
                <select asp-for="TopicView.LecturerName" class="form-control" asp-items="ViewBag.LecturerName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

