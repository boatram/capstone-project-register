@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div>
    <h4>Login</h4>
    <hr />
    <form method="post" class="m-2 p-3 bg-light">
        <div class="form-group">
            <label asp-for="Lecturer.Email"></label>
            <input class="form-control" asp-for="Lecturer.Email" />
            <span asp-validation-for="Lecturer.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lecturer.Password"></label>
            <input type="password" class="form-control" asp-for="Lecturer.Password" />
            <span asp-validation-for="Lecturer.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Login</button>
        </div>
    </form>
</div>
