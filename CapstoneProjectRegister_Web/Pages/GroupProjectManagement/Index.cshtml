@page
@model CapstoneProjectRegister.Web.Pages.GroupProjectManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4>Group Management</h4>
<hr />
<p>
    <a asp-page="Create">Create new group</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Group
            </th>
            <th>
                Semester
            </th>
            <th>
                Topic
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GroupProject) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Semester.Code)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Topic.Name)
            </td>
                @if (item.Status.Equals(true))
                {
                    <td>Done</td>
                }
                else if (item.Status.Equals(false))
                {
                    <td>Fail</td>
                }
                else
                {
                    <td>Not yet</td>
                }
            <td>
                    <a asp-page="/StudentInGroupManagement/Index" asp-route-id="@item.Id">View all</a> 
            </td>
        </tr>
}
    </tbody>
</table>
